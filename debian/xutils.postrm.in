#!/bin/sh

set -e

THIS_PACKAGE=xutils
THIS_SCRIPT=postrm

#INCLUDE_SHELL_LIB#

case "$1" in
abort-install|abort-upgrade)
  if dpkg --compare-versions "$2" lt-nl "1:7.3+11"; then
    remove_conffile_rollback "/etc/X11/rstart/commands/x11r6/@List"
    remove_conffile_rollback "/etc/X11/rstart/commands/x11r6/LoadMonitor"
    remove_conffile_rollback "/etc/X11/rstart/commands/x11r6/Terminal"
    remove_conffile_rollback "/etc/X11/rstart/commands/@List"
    remove_conffile_rollback "/etc/X11/rstart/commands/ListContexts"
    remove_conffile_rollback "/etc/X11/rstart/commands/ListGenericCommands"
    remove_conffile_rollback "/etc/X11/rstart/contexts/@List"
    remove_conffile_rollback "/etc/X11/rstart/contexts/default"
    remove_conffile_rollback "/etc/X11/rstart/contexts/x11r6"
    remove_conffile_rollback "/etc/X11/rstart/config"
    remove_conffile_rollback "/etc/X11/rstart/rstartd.real"
  fi
esac

#DEBHELPER#

exit 0

